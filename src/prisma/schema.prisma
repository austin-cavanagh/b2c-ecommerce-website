model ProductPrice {
  id        Int     @id @default(autoincrement())
  productId Int
  dimension String
  price     Int
  product   Product @relation(fields: [productId], references: [id])
}

model ImageUrl {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  url       String
  altText   String
}

